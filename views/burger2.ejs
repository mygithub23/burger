<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="/assets/css/burger_style.css" type="text/css" />
  <title>Eat Da Burger</title>
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="/assets/js/burgers.js"></script>
</head>

<body>
  <div class="container">
    <img src="./assets/img/eatdaburger.png" />

    <h1>Eat Da Burger!</h1>
    <p>Add a burger that you would like to try.</p>
    <h2>Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="burger">New Burger Name:</label>
        <input type="text" id="burger" name="burger_name" />
        <button type="submit">Add Burger</button>
      </div>
    </form>
    <div class="row">
      <div class="cols">
        <h2>New Burgers to be eaten!</h2>

        <div class="new-burger">
          <button type="button" class="eat-burger"> eat burger</button>
          <ul>
           
            <% for(var i = 0; i <burgers.length; i++){%>
  
              <% if(burgers[i].status){ %> 
              <li>
                <%= burgers[i].custorder %>         
              
              </li>
              <% } %>
              <% } %>
    </ul>



            DEVOUR IT!
          
        </div>
        {{/unless}} {{/each}}
      </div>
      <div class="cols">
        <h2>Burgers that have been devoured!</h2>
        
          
        <ul>
           
          <% for(var i = 0; i <burgers.length; i++){%>

            <% if (!burgers[i].status){ %> 
            <li>
              <%= burgers[i].custorder %>         
            
            </li>
            <% } %>
            <% } %>
  </ul>
      </div>
    </div>
  </div>
</body>

</html>